/*容器*/
.container {
  padding:0;
  width:100%;
}
.table {
  border:2px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 95%;
  margin-top:40rpx;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.td {
  padding: 7px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width:100%;
  font-size: 33rpx;
}
.table .tr:nth-of-type(1) .td:nth-of-type(1),.table .tr:nth-of-type(1) .td:nth-of-type(2){
  line-height: 70rpx;
}
.table .tr:nth-last-of-type(1) .td{
    border-bottom: 2px solid #dadada;
}
.table .tr:nth-of-type(1) .td:nth-last-of-type(1){
     border-right: 2px solid #dadada;
}
.table .tr:nth-of-type(2) .td:nth-of-type(1){
     border-right: 2px solid #dadada;
}

/*分页*/
.page {
  display: flex;
  justify-content: space-between;
  width:100%;
}
.page,button {
  font-size: 15px;
  margin-top:20px;
  margin-bottom:20px;
  padding-left:40px;
  padding-right:40px;
}
/*周末回家 查看  */
.check {
  color:blue;
  text-decoration:underline;
}